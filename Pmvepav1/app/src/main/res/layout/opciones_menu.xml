<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list1"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".OpcionesmenuActivity"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:text="Pocket AMP MT (Colombia)"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"

        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:id="@+id/codensa_logo"
        android:src="@drawable/badges14"/>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="487dp"
        android:orientation="vertical"
        android:layout_weight="0.80">

    <RadioGroup
        android:id="@+id/opciones_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_below="@+id/textView"
        android:orientation="vertical"
        android:gravity="left"
        android:layout_margin="25dp"
        android:background="#4996f5"
        android:paddingRight="50dp">

        <RadioButton
            android:id="@+id/opcion1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:checked="false"
            android:text="Tarjetas Móviles Dinámicas"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:id="@+id/opcion2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Formularios APP"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:id="@+id/opcion3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Procesos en Móviles"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:id="@+id/opcion4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Oferta de servicios APP"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:id="@+id/opcion5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Encuestas digitales"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:id="@+id/opcion6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Charlas emprendimiento"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:id="@+id/opcion7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Asesorías y estudios de mercado"
            android:onClick="onRadioButtonClicked"/>
    </RadioGroup>
    </ScrollView>

</LinearLayout>